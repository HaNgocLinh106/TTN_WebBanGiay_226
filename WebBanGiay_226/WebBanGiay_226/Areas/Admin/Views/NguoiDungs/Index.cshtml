<div class="content">

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header-primary">
                        <h4 class="card-title">
                            Danh sách khách hàng
                        </h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        Tên khách hàng
                                    </th>
                                    <th>
                                        SDT
                                    </th>
                                    <th>
                                        Địa chỉ
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenNguoiDung)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SDT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.MaNguoiDung }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.MaNguoiDung }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MaNguoiDung })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


